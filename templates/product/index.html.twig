{% extends 'base.html.twig' %}


{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2>Manage <b>Products</b></h2>
						</div>
						<div class="col-xs-6">
							<a href="{{ path('app_product_new') }}" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Product</span></a>
							{# <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>						 #}
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>
								<span class="custom-checkbox">
									<input type="checkbox" id="selectAll">
									<label for="selectAll"></label>
								</span>
							</th>
							<th>#</th>
							<th>Nom</th>
							<th>Poids</th>
							<th>Prix</th>
                            <th>Date</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
                    {% for product in products %}
						<tr>
							<td>
								<span class="custom-checkbox">
									<input type="checkbox" id="checkbox1" name="options[]" value="1">
									<label for="checkbox1"></label>
								</span>
							</td>
							<td>{{ product.id }}</td>
							<td>{{ product.name }}</td>
							<td>{{ product.weight }}</td>
							<td>{{ product.price }}</td>
                            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
							<td>
								<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								<a href="{{ path('app_product_delete', {'id': product.id}) }}" class="delete" data-toggle="modal">
                                    <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                                </a>
							</td>
						</tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
					</tbody>
				</table>
			</div>
		</div>        
    </div>
{% endblock %}
